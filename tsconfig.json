{
    "compileOnSave": false,
    "compilerOptions": {
        "strict": true,
        "lib": [
            "es2015",
            "es2016",
            "es2017",
            "es2018",
            "es2019",
            "es2020"
        ],
        "target": "ES6",
        "module": "ES6",
        "moduleResolution": "node",
        "removeComments": true,
        "preserveConstEnums": true,
        "skipLibCheck": true
    },
    "exclude": [
        "node_modules"
    ]
}
